{
    "manifest_version": 3,
    "name": "Cloudflare Buddy",
    "version": "1.0",
    "description": "Create DNS records for your domains added on Cloudflare",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://api.cloudflare.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/cloudflare-buddy-16.png",
        "48": "images/cloudflare-buddy-48.png",
        "128": "images/cloudflare-buddy-128.png"
      }
    },
    "icons": {
      "16": "images/cloudflare-buddy-16.png",
      "48": "images/cloudflare-buddy-48.png",
      "128": "images/cloudflare-buddy-128.png"
    }
  }
